<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="381dp"
        android:layout_height="300dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="300dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listNome"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="@+id/cardFoto"
                    app:layout_constraintStart_toEndOf="@+id/cardFoto"
                    app:layout_constraintTop_toBottomOf="@+id/txtNome"
                    app:layout_constraintVertical_bias="0.224" />

                <TextView
                    android:id="@+id/listNum"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="@+id/cardFoto"
                    app:layout_constraintStart_toEndOf="@+id/cardFoto"
                    app:layout_constraintTop_toBottomOf="@+id/txtNome"
                    app:layout_constraintVertical_bias="0.224" />

                <TextView
                    android:id="@+id/listEmail"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="@+id/cardFoto"
                    app:layout_constraintStart_toEndOf="@+id/cardFoto"
                    app:layout_constraintTop_toBottomOf="@+id/txtNome"
                    app:layout_constraintVertical_bias="0.224" />

                <EditText
                    android:id="@+id/listId"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:contentDescription="delete"
                    android:onClick="deletarContatos"
                    app:icon="@android:drawable/btn_dialog" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>